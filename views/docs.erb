<!DOCTYPE html>
<html>

    <div class="main_content">
        <div class="header">All Documents</div>  
        <div class="info">
          <table>
			<% @documents.each do |doc| %>
		 	 <tr>
		    	<td><%=doc.title %><td><%= doc.date %></td><td><%= doc.tag_involved %></td><%= doc.labelled %></td>  <%= doc.location %></td>
		    	<td><a href="/view?path=<%= doc.id %>" target="blank"> View</a></td>
		  <% end %>
		  </tr>
		</table>
      </div>
    </div>
</div>

</body>
</html>
	